<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tradingdemo.controller.WalletController">
    
    <!-- Top Navigation -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #252535; -fx-padding: 15;">
            <Button fx:id="backButton" text="â† Back" style="-fx-padding: 8 15; -fx-background-color: #555555; -fx-text-fill: white; -fx-cursor: hand;"/>
            <Label text="My Wallet" style="-fx-text-fill: #00d4ff; -fx-font-size: 18; -fx-font-weight: bold; -fx-pref-width: 300;"/>
            <Button fx:id="refreshButton" text="ðŸ”„ Refresh" style="-fx-padding: 8 15; -fx-background-color: #00d4ff; -fx-text-fill: #1e1e2e; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            
            <!-- Wallet Info -->
            <VBox spacing="10" style="-fx-border-color: #00d4ff; -fx-border-radius: 5; -fx-padding: 20; -fx-background-color: #252535;">
                <Label fx:id="totalValueLabel" text="Total Balance: $1,000.00 | Cash: $1,000.00" 
                       style="-fx-text-fill: #00d4ff; -fx-font-size: 16; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Holdings -->
            <Label text="Your Holdings" style="-fx-text-fill: #00d4ff; -fx-font-size: 16; -fx-font-weight: bold;"/>
            <ListView fx:id="walletListView" 
                     style="-fx-padding: 10; -fx-background-color: #1e1e2e; -fx-control-inner-background: #252535; -fx-text-fill: #cccccc; -fx-font-size: 12;"/>
        </VBox>
    </center>
</BorderPane>

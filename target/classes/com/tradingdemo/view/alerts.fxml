<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.AlertsController" spacing="10" style="-fx-padding:20; -fx-background-color:#f8fafc;">
    <Label style="-fx-font-size:20; -fx-font-weight:bold;" text="Alertes Prix" />
    <HBox spacing="8">
        <TextField fx:id="symbolField" promptText="Symbol (e.g., BTC)" />
        <TextField fx:id="priceField" promptText="Target price" />
        <Button fx:id="aboveBtn" text=">= Notify" />
        <Button fx:id="belowBtn" text="&lt;= Notify" />
    </HBox>
    <ListView fx:id="alertsList" prefHeight="300" />
    <HBox spacing="8">
        <Button fx:id="enableBtn" text="Enable" />
        <Button fx:id="disableBtn" text="Disable" />
        <Button fx:id="deleteBtn" text="Delete" />
        <Button fx:id="sendTestBtn" text="Send Test Email" />
        <Button fx:id="backBtn" text="Back" />
    </HBox>
</VBox>

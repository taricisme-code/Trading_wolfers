<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.ProfilController" style="-fx-background-color: #f8fafc;">
  <top>
    <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15 40; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
      <Button fx:id="backButton" style="-fx-padding: 10 20; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: bold;" text="â† Back" />
      <Label style="-fx-text-fill: #111827; -fx-font-size: 20; -fx-font-weight: bold;" text="ðŸ‘¤ Profile" />
    </HBox>
  </top>
  <center>
    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
      <content>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f8fafc;">
          <padding>
            <Insets bottom="30" left="50" right="50" top="30" />
          </padding>

          <!-- Title -->
          <Label style="-fx-text-fill: #111827; -fx-font-size: 28; -fx-font-weight: bold;" text="Modify Account" />

          <!-- Registration Form Grid -->
          <GridPane hgap="20" style="-fx-padding: 30; -fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-width: 1;" vgap="15">

            <!-- First Name -->
            <Label style="-fx-text-fill: #111827; -fx-font-size: 13; -fx-font-weight: bold;" text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="firstNameField" promptText="First name" style="-fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1; -fx-pref-width: 300;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Last Name -->
            <Label style="-fx-text-fill: #111827; -fx-font-size: 13; -fx-font-weight: bold;" text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="lastNameField" promptText="Last name" style="-fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1; -fx-pref-width: 300;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Email -->
            <Label style="-fx-text-fill: #111827; -fx-font-size: 13; -fx-font-weight: bold;" text="Email" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" promptText="Email address" style="-fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1; -fx-pref-width: 300;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Phone -->
            <Label style="-fx-text-fill: #111827; -fx-font-size: 13; -fx-font-weight: bold;" text="Phone" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" promptText="Phone number" style="-fx-padding: 12; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1; -fx-pref-width: 300;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <columnConstraints>
              <ColumnConstraints />
              <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
              <RowConstraints />
              <RowConstraints />
              <RowConstraints />
              <RowConstraints />
            </rowConstraints>
          </GridPane>

          <!-- Buttons -->
          <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="registerButton" style="-fx-padding: 14 50; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 10; -fx-background-radius: 10;" text="Save Changes" />
            <Button fx:id="resetButton" style="-fx-padding: 14 40; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-border-color: #e5e7eb; -fx-cursor: hand; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-width: 1;" text="Reset" />
          </HBox>

          <!-- 2FA Section -->
          <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="twoFactorStatusLabel" style="-fx-font-size: 14; -fx-font-weight: bold;" text="2FA: Not enabled" />
            <Button fx:id="enable2FAButton" style="-fx-padding: 8 16; -fx-background-color: #10b981; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8;" text="Enable 2FA" />
            <Button fx:id="disable2FAButton" style="-fx-padding: 8 16; -fx-background-color: #ef4444; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8;" text="Disable 2FA" />
          </HBox>

          <!-- Session IP Information Section -->
          <VBox spacing="10" style="-fx-padding: 30; -fx-background-color: #f0f9ff; -fx-border-color: #0284c7; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-width: 1;">
            <Label style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;" text="ðŸŒ Session Information" />
            <Label fx:id="ipAddressLabel" style="-fx-text-fill: #333333; -fx-font-size: 13;" text="IP Address: N/A" />
            <Label fx:id="locationLabel" style="-fx-text-fill: #333333; -fx-font-size: 13;" text="Location: N/A" />
            <Label fx:id="ispLabel" style="-fx-text-fill: #333333; -fx-font-size: 13;" text="ISP: N/A" />
            <Label fx:id="timezoneLabel" style="-fx-text-fill: #333333; -fx-font-size: 13;" text="Timezone: N/A" />
          </VBox>

          <!-- Login History Section -->
          <VBox spacing="10" style="-fx-padding: 30; -fx-background-color: #fef3c7; -fx-border-color: #f59e0b; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-width: 1;">
            <Label style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;" text="ðŸ“‹ Login History" />
            <ListView fx:id="loginHistoryListView" style="-fx-control-inner-background: white; -fx-padding: 10; -fx-border-radius: 8;" prefHeight="150" />
          </VBox>
        </VBox>
      </content>
    </ScrollPane>
  </center>
</BorderPane>

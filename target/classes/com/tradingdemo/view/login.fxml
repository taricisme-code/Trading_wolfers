<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tradingdemo.controller.LoginController">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Logo/Title -->
    <Label text="Crypto Trading Demo" style="-fx-text-fill: #00d4ff; -fx-font-size: 36; -fx-font-weight: bold;"/>
    <Label text="Login to Your Account" style="-fx-text-fill: #888888; -fx-font-size: 14;"/>

    <!-- Email Field -->
    <VBox spacing="5">
        <Label text="Email Address" style="-fx-text-fill: #cccccc;"/>
        <TextField fx:id="emailField" promptText="Enter your email" style="-fx-padding: 10; -fx-font-size: 14;"/>
    </VBox>

    <!-- Password Field -->
    <VBox spacing="5">
        <Label text="Password" style="-fx-text-fill: #cccccc;"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-padding: 10; -fx-font-size: 14;"/>
    </VBox>

    <!-- Login Button -->
    <Button fx:id="loginButton" text="LOGIN" style="-fx-padding: 12 40; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #00d4ff; -fx-text-fill: #1e1e2e; -fx-cursor: hand;"/>

    <!-- Separator -->
    <Label text="─────────────────────────────" style="-fx-text-fill: #444444;"/>

    <!-- Register Link -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Don't have an account?" style="-fx-text-fill: #888888;"/>
        <Button fx:id="registerButton" text="Register Now" style="-fx-padding: 8 16; -fx-font-size: 12; -fx-background-color: transparent; -fx-text-fill: #00d4ff; -fx-cursor: hand;"/>
    </HBox>
</VBox>

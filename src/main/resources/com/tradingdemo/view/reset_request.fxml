<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.ResetRequestController" spacing="12" style="-fx-padding:20; -fx-background-color:#f8fafc;">
    <Label text="Reset Password" style="-fx-font-size:20; -fx-font-weight:bold;" />
    <Label text="Enter the email associated with your account:" />
    <TextField fx:id="emailField" promptText="Email" />
    <Button fx:id="sendCodeBtn" text="Send Reset Code" />
    <Button fx:id="backBtn" text="Back" />
</VBox>

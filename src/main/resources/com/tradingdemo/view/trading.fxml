<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane prefWidth="1700" prefHeight="900" style="-fx-background-color: #f8fafc;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.TradingController">
    
    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15 40; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
            <Label text="ðŸª™ Crypto Trading Platform" style="-fx-text-fill: #111827; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" text="Back to Dashboard" style="-fx-padding: 8 16; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: normal;"/>
            <Label fx:id="balanceHeaderLabel" text="Balance: 1000.00 USD" style="-fx-text-fill: #16c784; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 8 16;"/>
        </HBox>
    </top>

    <!-- Main 3-Column Layout -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f8fafc; -fx-background: #f8fafc;">
            <HBox spacing="24" style="-fx-background-color: #f8fafc; -fx-padding: 30 40;">
            
            <!-- LEFT SIDEBAR: Stats Cards -->
            <VBox spacing="14" style="-fx-min-width: 260; -fx-max-width: 260;">
                
                <!-- Market Cap Card -->
                <VBox spacing="4" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 15; -fx-border-width: 1;">
                    <Label text="Market Cap" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label fx:id="marketCapLabel" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Label fx:id="marketCapChangeLabel" text="+5.02%" style="-fx-text-fill: #16c784; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                
                <!-- Volume Card -->
                <VBox spacing="4" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 15; -fx-border-width: 1;">
                    <Label text="Volume (24h)" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label fx:id="volumeLabel" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Label fx:id="volumeChangeLabel" text="-6.2%" style="-fx-text-fill: #ea3943; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                
                <!-- 24h High Card -->
                <VBox spacing="4" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 15; -fx-border-width: 1;">
                    <Label text="24h High" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                    <Label fx:id="highLabel" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                </VBox>
                
                <!-- 24h Low Card -->
                <VBox spacing="4" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 15; -fx-border-width: 1;">
                    <Label text="24h Low" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                    <Label fx:id="lowLabel" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                </VBox>
                
                <!-- Total Supply Card -->
                <VBox spacing="4" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 15; -fx-border-width: 1;">
                    <Label text="Total Supply" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                    <Label fx:id="supplyLabel" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>
            
            <!-- CENTER: Chart and Price Info -->
            <VBox spacing="18" HBox.hgrow="ALWAYS">
                
                <!-- Crypto Selector Pills -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="btcButton" text="BTC" style="-fx-padding: 8 16; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    <Button fx:id="ethButton" text="ETH" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    <Button fx:id="bnbButton" text="BNB" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    <Button fx:id="adaButton" text="ADA" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    <Button fx:id="solButton" text="SOL" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    <Button fx:id="xrpButton" text="XRP" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                </HBox>
                
                <!-- Large Coin Display -->
                <VBox spacing="8">
                    <Label fx:id="selectedSymbolLabel" text="Bitcoin BTC" style="-fx-text-fill: #111827; -fx-font-size: 14;"/>
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Label fx:id="currentPriceLabel" text="69034.61" style="-fx-text-fill: #111827; -fx-font-size: 46; -fx-font-weight: bold;"/>
                        <Label fx:id="priceChangeLabel" text="â–² 5.02% (24h)" style="-fx-text-fill: #16c784; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 8 0 0 0;"/>
                    </HBox>
                </VBox>
                
                <!-- Navigation Tabs -->
                <HBox spacing="24">
                    <Button fx:id="chartTab" text="Chart" style="-fx-padding: 8 0; -fx-background-color: transparent; -fx-text-fill: #3861fb; -fx-cursor: hand; -fx-font-size: 14; -fx-font-weight: bold; -fx-border-color: transparent transparent #3861fb transparent; -fx-border-width: 0 0 2 0;"/>
                    <Button fx:id="marketsTab" text="Markets" style="-fx-padding: 8 0; -fx-background-color: transparent; -fx-text-fill: #111827; -fx-cursor: hand; -fx-font-size: 14;"/>
                    <Button fx:id="newsTab" text="News" style="-fx-padding: 8 0; -fx-background-color: transparent; -fx-text-fill: #111827; -fx-cursor: hand; -fx-font-size: 14;"/>
                    <Button fx:id="aboutTab" text="About" style="-fx-padding: 8 0; -fx-background-color: transparent; -fx-text-fill: #111827; -fx-cursor: hand; -fx-font-size: 14;"/>
                </HBox>
                
                <!-- Chart Controls -->
                <HBox spacing="0" alignment="CENTER_LEFT">
                    <HBox spacing="8">
                        <Button fx:id="priceChartBtn" text="Price" style="-fx-padding: 8 16; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 12; -fx-font-weight: bold;"/>
                        <Button fx:id="marketCapChartBtn" text="Mkt Cap" style="-fx-padding: 8 16; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 12; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    </HBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <HBox spacing="8">
                        <Button fx:id="time24hBtn" text="24h" style="-fx-padding: 6 12; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 11;"/>
                        <Button fx:id="time7dBtn" text="7D" style="-fx-padding: 6 12; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 11; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                        <Button fx:id="time1mBtn" text="1M" style="-fx-padding: 6 12; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 11; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                        <Button fx:id="time1yBtn" text="1Y" style="-fx-padding: 6 12; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 11; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                        <Button fx:id="timeAllBtn" text="All" style="-fx-padding: 6 12; -fx-background-color: white; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 11; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                    </HBox>
                </HBox>
                
                <!-- Chart Container -->
                <VBox style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 16; -fx-background-radius: 16; -fx-padding: 20; -fx-border-width: 1;">
                    <LineChart fx:id="priceChart" prefHeight="400" maxHeight="450" legendVisible="false" style="-fx-background-color: white;">
                        <xAxis><CategoryAxis side="BOTTOM" style="-fx-tick-label-fill: #111827; -fx-font-size: 11;"/></xAxis>
                        <yAxis><NumberAxis side="LEFT" style="-fx-tick-label-fill: #111827; -fx-font-size: 11;"/></yAxis>
                    </LineChart>
                </VBox>
            </VBox>
            
            <!-- RIGHT SIDEBAR: Trading Panel -->
            <VBox spacing="20" style="-fx-min-width: 360; -fx-max-width: 360;">
                
                <!-- Sentiment Card with Gradient -->
                <VBox spacing="10" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2a5ada, #1e40af); -fx-border-radius: 16; -fx-background-radius: 16; -fx-padding: 20;">
                    <Label text="ðŸ”¥ Market Sentiment" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
                    <HBox spacing="8">
                        <Label text="Fear &amp; Greed:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 13;"/>
                        <Label fx:id="sentimentIndexLabel" text="65" style="-fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold;"/>
                    </HBox>
                    <HBox spacing="8">
                        <Label text="Signal:" style="-fx-text-fill: #e0e0e0; -fx-font-size: 13;"/>
                        <Label fx:id="sentimentSignalLabel" text="BULLISH" style="-fx-text-fill: #16c784; -fx-font-size: 13; -fx-font-weight: bold;"/>
                    </HBox>
                    <Label fx:id="sentimentReasoningLabel" wrapText="true" text="Short reasoning goes here..." style="-fx-text-fill: #e6eefc; -fx-font-size: 12; -fx-padding: 6 0 0 0;" />
                </VBox>
                
                <!-- Quick Trade Panel -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 20; -fx-border-width: 1;">
                    <Label text="Quick Trade" style="-fx-text-fill: #111827; -fx-font-size: 16; -fx-font-weight: bold;"/>
                    
                    <!-- BUY/SELL Toggle -->
                    <HBox spacing="8">
                        <ToggleButton fx:id="buyToggle" text="BUY" style="-fx-padding: 10; -fx-background-color: #16c784; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: bold; -fx-pref-width: 170;"/>
                        <ToggleButton fx:id="sellToggle" text="SELL" style="-fx-padding: 10; -fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: bold; -fx-pref-width: 170;"/>
                    </HBox>
                    
                    <!-- Order Type -->
                    <VBox spacing="6">
                        <Label text="Order Type" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                        <ComboBox fx:id="orderTypeCombo" style="-fx-padding: 10; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-pref-width: 340;"/>
                    </VBox>
                    
                    <!-- Hidden fields for controller compatibility -->
                    <ComboBox fx:id="symbolCombo" managed="false" visible="false"/>
                    <ComboBox fx:id="sideCombo" managed="false" visible="false"/>
                    <TextField fx:id="stopLossField" managed="false" visible="false"/>
                    <TextField fx:id="takeProfitField" managed="false" visible="false"/>
                    
                    <!-- Price -->
                    <VBox spacing="6">
                        <Label text="Price" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                        <HBox spacing="8">
                            <TextField fx:id="priceField" text="69034" style="-fx-padding: 10; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS"/>
                            <Button fx:id="decreaseBtn" text="-" style="-fx-padding: 10 16; -fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 16; -fx-font-weight: bold;"/>
                            <Button fx:id="increaseBtn" text="+" style="-fx-padding: 10 16; -fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Quantity -->
                    <VBox spacing="6">
                        <HBox spacing="5">
                            <Label text="Quantity" style="-fx-text-fill: #111827; -fx-font-size: 12;"/>
                            <Label fx:id="quantityUnitLabel" text="(BTC)" style="-fx-text-fill: #111827; -fx-font-size: 11;"/>
                        </HBox>
                        <TextField fx:id="quantityField" promptText="0.001" style="-fx-padding: 10; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    </VBox>
                    
                    <!-- Total Cost -->
                    <VBox spacing="6">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label text="Total:" style="-fx-text-fill: #111827; -fx-font-size: 13;"/>
                            <Label fx:id="totalCostLabel" text="0.00 USD" style="-fx-text-fill: #3861fb; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        </HBox>
                        <Label fx:id="availableBalanceLabel" text="Available: 1000.00 USD" style="-fx-text-fill: #111827; -fx-font-size: 11;"/>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="10" style="-fx-padding: 5 0 0 0;">
                        <Button fx:id="placeOrderButton" text="Place Trade" style="-fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-pref-width: 160;" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="viewOrdersButton" text="Orders" style="-fx-padding: 12; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-color: white; -fx-text-fill: #3861fb; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: #3861fb; -fx-border-width: 1; -fx-pref-width: 140;" HBox.hgrow="ALWAYS"/>
                    </HBox>
                </VBox>
                
                <!-- Orders List (Compact) -->
                <VBox spacing="12" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12; -fx-padding: 16; -fx-border-width: 1;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Open Positions" style="-fx-text-fill: #111827; -fx-font-size: 15; -fx-font-weight: bold;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="positionCountLabel" text="0 positions" style="-fx-text-fill: #111827; -fx-font-size: 11;"/>
                    </HBox>
                    
                    <!-- Table Header -->
                    <HBox spacing="5" style="-fx-padding: 8 0; -fx-border-color: transparent transparent #e5e7eb transparent; -fx-border-width: 0 0 1 0;">
                        <Label text="Pair" style="-fx-text-fill: #111827; -fx-font-size: 11; -fx-pref-width: 50;"/>
                        <Label text="Type" style="-fx-text-fill: #111827; -fx-font-size: 11; -fx-pref-width: 50;"/>
                        <Label text="Amount" style="-fx-text-fill: #111827; -fx-font-size: 11; -fx-pref-width: 70;"/>
                        <Label text="Price" style="-fx-text-fill: #111827; -fx-font-size: 11; -fx-pref-width: 80;"/>
                        <Label text="P/L" style="-fx-text-fill: #111827; -fx-font-size: 11; -fx-pref-width: 60;"/>
                    </HBox>
                    
                    <!-- Orders List -->
                    <ListView fx:id="orderListView" prefHeight="140" maxHeight="140" style="-fx-background-color: white; -fx-control-inner-background: white; -fx-text-fill: #111827; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-width: 1; -fx-padding: 0;"/>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="closePositionButton" text="Close Position" style="-fx-padding: 10 16; -fx-background-color: #ea3943; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-font-weight: bold;"/>
                        <Button fx:id="cancelOrderButton" text="Cancel" managed="false" visible="false"/>
                        <Button fx:id="refreshOrdersButton" text="Refresh" style="-fx-padding: 10 16; -fx-background-color: #f3f4f6; -fx-text-fill: #111827; -fx-cursor: hand; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 13; -fx-border-color: #e5e7eb; -fx-border-width: 1;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="totalPnLLabel" text="Total P/L: --" style="-fx-text-fill: #111827; -fx-font-size: 13; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
        </ScrollPane>
    </center>
    
    <!-- Chatbot Button at Bottom Right -->
    <bottom>
        <StackPane style="-fx-background-color: transparent;">
            <Button fx:id="chatbotButton" text="?" 
                    style="-fx-background-color: #3861fb; -fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 12 18; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);"
                    StackPane.alignment="BOTTOM_RIGHT">
                <StackPane.margin>
                    <Insets right="30" bottom="30"/>
                </StackPane.margin>
            </Button>
        </StackPane>
    </bottom>
</BorderPane>

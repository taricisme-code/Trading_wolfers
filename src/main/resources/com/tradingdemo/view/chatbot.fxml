<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="0" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 16; -fx-background-radius: 16; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 5);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.ChatbotController">
    
    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #3861fb; -fx-padding: 15 20; -fx-background-radius: 16 16 0 0;">
        <Label text="?" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label text="Trading Assistant" style="-fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeChatButton" text="✕" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-cursor: hand; -fx-padding: 5;"/>
    </HBox>
    
    <!-- Chat Messages Area -->
    <ScrollPane fx:id="chatScrollPane" fitToWidth="true" style="-fx-background-color: #f8fafc; -fx-background: #f8fafc; -fx-border-color: transparent;" prefHeight="400" prefWidth="400">
        <VBox fx:id="chatMessagesBox" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8fafc;"/>
    </ScrollPane>
    
    <!-- Input Area -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e5e7eb; -fx-border-width: 1 0 0 0;">
        
        <!-- Quick Actions -->
        <HBox spacing="8">
            <Button fx:id="quickAction1" text="How to trade?" style="-fx-padding: 8 12; -fx-background-color: #f1f5ff; -fx-text-fill: #3861fb; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #3861fb; -fx-border-width: 1;"/>
            <Button fx:id="quickAction2" text="View balance" style="-fx-padding: 8 12; -fx-background-color: #f1f5ff; -fx-text-fill: #3861fb; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #3861fb; -fx-border-width: 1;"/>
            <Button fx:id="quickAction3" text="Market info" style="-fx-padding: 8 12; -fx-background-color: #f1f5ff; -fx-text-fill: #3861fb; -fx-cursor: hand; -fx-border-radius: 20; -fx-background-radius: 20; -fx-font-size: 12; -fx-border-color: #3861fb; -fx-border-width: 1;"/>
        </HBox>
        
        <!-- Input Field -->
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="chatInputField" promptText="Ask me anything..." style="-fx-padding: 10; -fx-font-size: 14; -fx-text-fill: #111827; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 20; -fx-background-radius: 20; -fx-border-width: 1;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendMessageButton" text="→" style="-fx-padding: 10 16; -fx-background-color: #3861fb; -fx-text-fill: white; -fx-cursor: hand; -fx-border-radius: 50%; -fx-background-radius: 50%; -fx-font-size: 16; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</VBox>

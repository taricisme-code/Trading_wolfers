<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.ResetConfirmController" spacing="12" style="-fx-padding:20; -fx-background-color:#f8fafc;">
    <Label text="Enter Reset Code" style="-fx-font-size:20; -fx-font-weight:bold;" />
    <Label text="Enter your email, the code you received, and a new password." />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="codeField" promptText="Reset code" />
    <PasswordField fx:id="newPasswordField" promptText="New password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" />
    <Button fx:id="resetBtn" text="Reset Password" />
    <Button fx:id="backBtn" text="Back" />
</VBox>

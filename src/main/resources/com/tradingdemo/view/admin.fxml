<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #0d1117;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tradingdemo.controller.AdminController">
    
    <top>
        <HBox spacing="15" style="-fx-background-color: #161b22; -fx-padding: 12;">
            <Button fx:id="backButton" text="Back to Dashboard" style="-fx-padding: 10 20; -fx-background-color: #21262d; -fx-text-fill: #c9d1d9; -fx-cursor: hand; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 13;"/>
            <Label text="" prefWidth="200"/>
            <Label text="ADMIN PANEL" style="-fx-text-fill: #ff6b6b; -fx-font-size: 18; -fx-font-weight: bold;"/>
            <Label text="" prefWidth="200"/>
            <Button fx:id="logoutButton" text="LOGOUT" style="-fx-padding: 8 15; -fx-background-color: #da3633; -fx-text-fill: white; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="0" style="-fx-background-color: #0d1117;">
            
            <TabPane style="-fx-background-color: #161b22;" tabClosingPolicy="UNAVAILABLE">
                
                <Tab text="Users" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #0d1117;">
                        
                        <HBox spacing="20" style="-fx-padding: 10;">
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Total Users" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalUsersLabel" text="0" style="-fx-text-fill: #58a6ff; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Active Traders" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="activeTradersLabel" text="0" style="-fx-text-fill: #56d364; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Total Balance" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalBalanceLabel" text="0.00" style="-fx-text-fill: #f85149; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>

                        <Separator/>
                        
                        <Label text="User Management" style="-fx-text-fill: #ff6b6b; -fx-font-size: 14; -fx-font-weight: bold;"/>
                        
                        <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                            <VBox spacing="5">
                                <Label text="User ID:" style="-fx-text-fill: #8b949e;"/>
                                <TextField fx:id="userIdField" promptText="Enter User ID" prefWidth="120" style="-fx-background-color: #21262d; -fx-text-fill: #c9d1d9; -fx-prompt-text-fill: #6e7681;"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="New Balance:" style="-fx-text-fill: #8b949e;"/>
                                <TextField fx:id="newBalanceField" promptText="Enter Amount" prefWidth="150" style="-fx-background-color: #21262d; -fx-text-fill: #c9d1d9; -fx-prompt-text-fill: #6e7681;"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="" style="-fx-font-size: 5;"/>
                                <Button fx:id="updateBalanceButton" text="Update Balance" style="-fx-padding: 8 15; -fx-background-color: #238636; -fx-text-fill: white; -fx-cursor: hand;"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="" style="-fx-font-size: 5;"/>
                                <Button fx:id="deleteUserButton" text="Delete User" style="-fx-padding: 8 15; -fx-background-color: #da3633; -fx-text-fill: white; -fx-cursor: hand;"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label text="" style="-fx-font-size: 5;"/>
                                <Button fx:id="refreshUsersButton" text="Refresh" style="-fx-padding: 8 15; -fx-background-color: #58a6ff; -fx-text-fill: white; -fx-cursor: hand;"/>
                            </VBox>
                        </HBox>

                        <Label text="All Users" style="-fx-text-fill: #58a6ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                        <TextArea fx:id="usersLog" wrapText="true" editable="false" prefHeight="300" style="-fx-control-inner-background: #161b22; -fx-text-fill: #c9d1d9;"/>
                    </VBox>
                </Tab>

                <Tab text="Trades" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #0d1117;">
                        
                        <HBox spacing="20" style="-fx-padding: 10;">
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Total Trades" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalTradesLabel" text="0" style="-fx-text-fill: #58a6ff; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Buy Orders" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalBuysLabel" text="0" style="-fx-text-fill: #238636; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Sell Orders" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalSellsLabel" text="0" style="-fx-text-fill: #da3633; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>

                        <Label text="Recent Trades" style="-fx-text-fill: #58a6ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                        <TextArea fx:id="tradesLog" wrapText="true" editable="false" prefHeight="400" style="-fx-control-inner-background: #161b22; -fx-text-fill: #c9d1d9;"/>
                    </VBox>
                </Tab>

                <Tab text="Orders" closable="false">
                    <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #0d1117;">
                        
                        <HBox spacing="20" style="-fx-padding: 10;">
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Total Orders" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="totalOrdersLabel" text="0" style="-fx-text-fill: #58a6ff; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Pending" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="pendingOrdersLabel" text="0" style="-fx-text-fill: #f85149; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Executed" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="executedOrdersLabel" text="0" style="-fx-text-fill: #56d364; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>

                        <Label text="All Orders" style="-fx-text-fill: #58a6ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                        <TextArea fx:id="ordersLog" wrapText="true" editable="false" prefHeight="400" style="-fx-control-inner-background: #161b22; -fx-text-fill: #c9d1d9;"/>
                    </VBox>
                </Tab>

                <Tab text="System Stats" closable="false">
                    <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #0d1117;">
                        
                        <Label text="Platform Statistics" style="-fx-text-fill: #58a6ff; -fx-font-size: 16; -fx-font-weight: bold;"/>
                        
                        <HBox spacing="20" style="-fx-padding: 10;">
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Cryptocurrencies" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="cryptoCountLabel" text="0" style="-fx-text-fill: #58a6ff; -fx-font-size: 28; -fx-font-weight: bold;"/>
                            </VBox>
                            <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #161b22; -fx-border-color: #30363d; -fx-border-radius: 6; -fx-background-radius: 6;">
                                <Label text="Platform Volume" style="-fx-text-fill: #8b949e; -fx-font-size: 11;"/>
                                <Label fx:id="volumeLabel" text="0.00" style="-fx-text-fill: #56d364; -fx-font-size: 28; -fx-font-weight: bold;"/>
                            </VBox>
                        </HBox>

                        <Separator/>

                        <Label text="Latest Activity" style="-fx-text-fill: #58a6ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                        <TextArea fx:id="activityLog" wrapText="true" editable="false" prefHeight="300" style="-fx-control-inner-background: #161b22; -fx-text-fill: #c9d1d9;"/>
                    </VBox>
                </Tab>

            </TabPane>
        </VBox>
    </center>
</BorderPane>

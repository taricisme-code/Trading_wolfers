<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.tradingdemo.controller.NewsController">
    
    <!-- Top Navigation -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #252535; -fx-padding: 15;">
            <Button fx:id="backButton" text="â† Back" style="-fx-padding: 8 15; -fx-background-color: #555555; -fx-text-fill: white; -fx-cursor: hand;"/>
            <Label text="Market News" style="-fx-text-fill: #00d4ff; -fx-font-size: 18; -fx-font-weight: bold; -fx-pref-width: 300;"/>
            <Button fx:id="refreshButton" text="ðŸ”„ Refresh" style="-fx-padding: 8 15; -fx-background-color: #00d4ff; -fx-text-fill: #1e1e2e; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            
            <!-- News List -->
            <VBox spacing="10" style="-fx-border-color: #00d4ff; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #252535; -fx-pref-width: 400;">
                <Label text="News Feed" style="-fx-text-fill: #00d4ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <ListView fx:id="newsListView" 
                         style="-fx-padding: 10; -fx-background-color: #1e1e2e; -fx-control-inner-background: #252535; -fx-text-fill: #cccccc; -fx-font-size: 10;"/>
            </VBox>

            <!-- News Details -->
            <VBox spacing="10" style="-fx-border-color: #00d4ff; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #252535; -fx-pref-width: 600;">
                <Label text="Article Details" style="-fx-text-fill: #00d4ff; -fx-font-size: 14; -fx-font-weight: bold;"/>
                <TextArea fx:id="newsDetailArea" 
                         wrapText="true" 
                         editable="false"
                         style="-fx-padding: 10; -fx-background-color: #1e1e2e; -fx-control-inner-background: #1e1e2e; -fx-text-fill: #cccccc; -fx-font-size: 11;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
